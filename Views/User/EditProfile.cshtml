<div class="inmodal">
    <div class="modal-body row">
        <div class="col-xs-2">
            <div class="form-group row-fluid">
                <div><img ngf-src="profile.imgSrc" class="img-circle m-b img-responsive"></div>
                <div class="btn btn-default" ngf-select="changFile($files)" ngf-max-size="2MB" required ngf-accept="'image/*'" ngf-pattern="'image/*'" ngf-multiple="false" ng-model="profile.imgSrc">上传照片</div>
            </div>
        </div>
        <div class="col-xs-10">
            <form class="form-horizontal" role="form" name="editProfileForm">
                <div class="form-group">
                    <label class="col-sm-2 control-label">姓名:</label>
                    <div class="col-sm-4">
                        <input type="text" placeholder="姓名" class="form-control" name="name" ng-model="name" ng-maxlength="10" ng-minlength="4" required>
                    </div>
                    <div class="m-t-xs col-sm-6" ng-show="editProfileForm.name.$invalid && editProfileForm.submitted">
                        <span class="text-danger" ng-show="editProfileForm.name.$error"><i class="fa fa-exclamation-triangle"></i> 请输入4-10位长度的姓名！</span>
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-2 control-label">手机:</label>
                    <div class="col-sm-4">
                        <input type="text" placeholder="手机" class="form-control" name="phone" ng-model="phone" ng-maxlength="11" ng-minlength="11" required>
                    </div>
                    <div class="m-t-xs col-sm-6" ng-show="editProfileForm.phone.$invalid && editProfileForm.submitted">
                        <span class="text-danger" ng-show="editProfileForm.phone.$error"><i class="fa fa-exclamation-triangle"></i> 请输入11位电话号码！</span>
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-sm-2 control-label">密码:</label>
                    <div class="col-sm-4">
                        <input type="password" placeholder="密码" class="form-control" name="password" required ng-model="password">
                    </div>
                    <div class="m-t-xs col-sm-6" ng-show="signup_form.password.$invalid && signup_form.submitted">
                        <span class="text-danger" ng-show="signup_form.password.$error"><i class="fa fa-exclamation-triangle"></i> 请输入密码！</span>
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-sm-2 control-label">性别:</label>
                    <div class="col-sm-4">
                        <select class="form-control m-b" name="sex">
                            <option>男</option>
                            <option>女</option>
                        </select>
                    </div>
                </div>


                <div class="form-group">
                    <label class="col-sm-2 control-label">邮箱:</label>
                    <div class="col-sm-4">
                        <input type="email" placeholder="Enter email" class="form-control" required name="email" ng-model="email">
                    </div>
                    <div class="m-t-xs col-sm-6" ng-show="editProfileForm.email.$invalid && editProfileForm.submitted">
                        <span class="text-danger" ng-show="editProfileForm.email.$error"><i class="fa fa-exclamation-triangle"></i>请输入有效的邮箱地址！</span>
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-sm-8 col-sm-offset-2">
                        <button type="button" class="btn btn-default" ng-click="cancel()">关闭</button>
                        <button type="submit" class="btn btn-primary" ng-click="ok()">保存</button>
                    </div>
                </div>

            </form>
        </div>
    </div>

</div>

