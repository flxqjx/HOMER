<div ng-controller="userListCtrl">
    <div class="row">
        <div class="col-lg-12">
            <div class="hpanel">
                <div class="panel-heading hbuilt">
                    <div class="row">
                        <div class="form-group col-md-3 ">
                            <label class="control-label col-sm-2 text-right p-t">部门:</label>
                            <div class="col-sm-4">
                                <select class="form-control m-b" name="selDept">
                                    <option selected>Company and Brothers</option>
                                    <option>Morgan & Morgan Inc.</option>
                                </select>
                            </div>
                            <label class="control-label col-sm-2 text-right p-t">职务:</label>
                            <div class="col-sm-4">
                                <select class="form-control m-b" name="selRole">
                                    <option selected>Company and Brothers</option>
                                    <option>Morgan & Morgan Inc.</option>
                                </select>
                            </div>
                        </div>
                        <div class="form-group col-md-4 ">
                            <label class="control-label col-sm-2 text-right p-t">用户状态:</label>
                            <div class="col-sm-2">
                                <select class="form-control m-b" name="selUsersStatus">
                                    <option selected>Company and Brothers</option>
                                    <option>Morgan & Morgan Inc.</option>
                                </select>
                            </div>
                            <label class="control-label col-sm-2 text-right p-t">值班筛选:</label>
                            <div class="col-sm-2">
                                <select class="form-control m-b" name="selOnDuty">
                                    <option selected>Company and Brothers</option>
                                    <option>Morgan & Morgan Inc.</option>
                                </select>
                            </div>

                            <label class="control-label col-sm-2 text-right p-t">星级:</label>
                            <div class="col-sm-2">
                                <select class="form-control m-b " name="selStarLevel">
                                    <option selected>Company and Brothers</option>
                                    <option>Morgan & Morgan Inc.</option>
                                </select>
                            </div>
                        </div>
                        <div class="form-group col-md-5">
                            <div class="col-sm-3">
                                <input class="form-control" type="text" placeholder="登录名、姓名、编码搜索">
                            </div>
                            <div class="col-sm-9 btn-group  btn-default pull-right">
                                <button class="btn btn-default btn-sm"><i class="fa fa-search"></i>搜索</button>
                                <button class="btn btn-default btn-sm">信息接收关闭</button>
                                <button class="btn btn-default btn-sm">信息接收开启</button>
                                <button class="btn btn-default btn-sm">设置部门人数</button>
                                <button class="btn btn-default btn-sm">添加用户</button>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="panel-body">
                    <div class="gridStyle" ng-grid="gridOptions"></div>
                </div>
            </div>
        </div>
    </div>
</div>
